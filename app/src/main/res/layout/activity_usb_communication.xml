<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/textview_title" android:id="@+id/main_tv_title"/>
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:id="@+id/usb_communication_select_mode_llayout"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/aoa_host_btn"
                    android:textSize="25sp"
                    android:padding="20dp"
                    android:text="@string/usb_communication_test_aoa_host"
                    android:textAllCaps="false"
                    />
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/aoa_accessory_btn"
                    android:textSize="25sp"
                    android:padding="20dp"
                    android:text="@string/usb_communication_test_aoa_accessory"
                    android:textAllCaps="false"
                    />
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/hid_host_btn"
                    android:textSize="25sp"
                    android:padding="20dp"
                    android:text="@string/usb_communication_test_hid_host"
                    android:textAllCaps="false"
                    />
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/hid_device_btn"
                    android:textSize="25sp"
                    android:padding="20dp"
                    android:text="@string/usb_communication_test_hid_device"
                    android:textAllCaps="false"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/usb_communication_test_state"
                    android:textSize="25sp"
                    android:textColor="@color/colorAccent"
                    android:gravity="center_horizontal"
                    />
            </LinearLayout>
        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/usb_communication_test_llayout"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="5dp"
                android:visibility="gone"
                android:id="@+id/usb_vid_pid_llayout">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Vid:"
                    android:gravity="center"
                    android:textSize="20sp"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textSize="20sp"
                    android:id="@+id/usb_vid_et"
                    android:layout_marginRight="20dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pid:"
                    android:gravity="center"
                    android:textSize="20sp"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textSize="20sp"
                    android:id="@+id/usb_pid_et"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/usb_communication_test_type_ll"
                android:orientation="horizontal">
                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="4"
                    android:id="@+id/usb_communication_test_send_type_rg"
                    android:layout_gravity="center"
                    android:paddingLeft="5dp">
                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:id="@+id/usb_communication_test_message_rbtn"
                        android:text="@string/usb_communication_test_message"
                        android:checked="true"
                        android:textSize="15sp" />
                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:id="@+id/usb_communication_test_file_rbtn"
                        android:text="@string/usb_communication_test_file"
                        android:checked="false"
                        android:textSize="15sp"/>
                </RadioGroup>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/usb_communication_test_select_file_btn"
                    android:layout_weight="2"
                    android:text="@string/usb_communication_test_select_file"
                    android:textAllCaps="false"
                    android:layout_marginRight="5dp"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:id="@+id/usb_communication_test_message_et"
                    android:textSize="20sp" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginRight="5dp"
                    android:id="@+id/usb_communication_test_send_btn"
                    android:text="@string/usb_communication_test_send"
                    android:textSize="15sp"
                    android:textAllCaps="false"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/usb_communication_test_status_tv"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/colorTextViewBG"
                    android:textSize="25sp" />
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:id="@+id/usb_communication_test_start_btn"
                    android:text="@string/usb_communication_test_start"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:id="@+id/usb_communication_test_clean_btn"
                    android:text="@string/usb_communication_test_clean"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="@color/colorTextViewBG">
                <TextView
                    android:id="@+id/usb_communication_test_message_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"/>
            </ScrollView>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">
        <include layout="@layout/button_status" android:id="@+id/main_btn_status" />
    </LinearLayout>

</LinearLayout>